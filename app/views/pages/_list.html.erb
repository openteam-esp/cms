<div class="nodes_list">
  <div class="actions">
    <%= link_to "Сортировка", "#", :class => "button icon loop" %>
    <%= link_to action_title(:action => 'new', :controller => 'pages'), new_node_page_path(resource), :class => "button icon add" %>
  </div>

  <%= content_tag :ul do %>
    <% resource.children.each do | child | %>
      <li><%= link_to child, child %></li>
    <% end %>
  <% end if resource.children.any? %>
</div>
