<%= form.inputs do %>
  <%= form.input :news_channel %>
  <%= form.input :news_per_page %>
  <%= form.input :news_paginated %>
  <%= form.input :news_order_by, :as => :select, :collection => form.object.class.values_for_select_tag(:news_order_by) %>
  <%= form.input :item_page,
                 :as => :select,
                 :collection => form.object.node.nodes_from_this_site,
                 :member_label => ->(n) { ('&nbsp;' * 2 * n.depth + n.title).html_safe } %>
  <%= form.input :news_until, :as => :date_picker %>
  <%= form.input :news_width %>
  <%= form.input :news_height %>

  <%= form.input :region, :as => :hidden %>
  <%= form.input :type, :as => :hidden %>
<% end %>
