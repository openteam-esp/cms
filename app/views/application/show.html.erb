<% content_for :actions do %>
  <%= link_to action_title(:action => 'edit'), edit_resource_path, :class => 'button icon edit' if controller.respond_to? :edit %>
  <%= link_to action_title(:action => 'destroy'), resource_path, confirm: t('Are you sure?'), method: :delete, :class => 'button icon remove' %>
  <%= yield :extra_actions %>
<% end %>
<%= render "view" %>
