<%= form.inputs do %>
  <%= form.input :news_channel, :as => :select, :collection => form.object.channels_collection %>
  <%= form.input :news_per_page %>
  <%= form.input :news_paginated %>

  <%= form.input :news_event_entry,
                 :as => :select,
                 :collection => form.object.class.values_for_select_tag(:news_event_entry),
                 :required => false %>

  <%= render :partial => 'manage/parts/item_page', :locals => { :form => form } %>

  <%= form.input :news_until, :as => :date_picker %>
  <%= form.input :news_width %>
  <%= form.input :news_height %>

  <%= form.input :region, :as => :hidden %>
  <%= form.input :type, :as => :hidden %>
<% end %>
