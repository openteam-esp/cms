<%= semantic_nested_form_for resource, :as => resource_instance_name, :url => collection_url, :html => { :class => resource.type.underscore, :multipart => true } do | form | %>
  <%= form.semantic_errors %>
  <%= render :partial => "fields", :locals => { :form => form } %>
  <%= form.actions do %>
    <%= form.action :submit, :button_html => { :class => 'button' } %>
    <%= form.action :cancel, :as => :link %>
  <% end %>
<% end %>
