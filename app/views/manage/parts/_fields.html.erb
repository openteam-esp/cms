<%= form.inputs do %>
  <%= form.input :title, :input_html => { :autofocus => true, :class => 'for_info_path' } %>
  <%= form.input :template, :as => :select, :collection => form.object.available_templates, :include_blank => false %>
<% end %>

<%= render :partial => "manage/#{@part.class.name.tableize}/fields", :locals => { :form => form } %>

<%= hidden_field_tag :region, @part.region %>
