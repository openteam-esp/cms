<%= javascript_include_tag 'esp-ckeditor/application' %>
<%= javascript_include_tag 'info_plugin.js' %>

<%= form.inputs do %>
  <%= form.input :region, :as => :hidden %>
  <%= form.input :type, :as => :hidden %>

  <div class='spotlight_items'>
    <%= form.semantic_fields_for :spotlight_items do |f| %>
      <div class='item'>
        <span class='handler_up' title='вверх'>вверх</span>
        <span class='handler_down' title='вниз'>вниз</span>
        <ul>
          <%= f.input :position, :as => :hidden, :input_html => { :class => 'spotlight_position' } %>
          <%= f.input :kind, :input_html => { :class => 'spotlight_kind' } %>
          <%= f.input :legend, :input_html => { :placeholder => 'Пресс-релизы' } %>
          <%= f.input :title %>
          <%= f.input :url, :as => :string %>
          <%#= f.input :annotation, :as => :ckeditor %>
          <%= f.input :since, :start_year => Time.zone.now.year, :end_year => (Time.zone.now - 10.years).year,
            :wrapper_html => { :class => :hiddeny } %>
          <%= f.input :starts_on, :start_year => Time.zone.now.year, :end_year => (Time.zone.now - 10.years).year,
            :wrapper_html => { :class => :hiddeny } %>
          <%= f.input :ends_on, :start_year => Time.zone.now.year, :end_year => (Time.zone.now - 10.years).year,
            :wrapper_html => { :class => :hiddeny } %>
          <li><hr /></li>
        </ul>
        <%= f.link_to_remove t('remove'), :class => 'button trash icon' %>
      </div>
    <% end %>

    <%= form.link_to_add t('add_spotlight_item'), :spotlight_items, :class => 'button icon add' %>
  </div>
<% end %>
