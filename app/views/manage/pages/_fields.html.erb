<%= form.inputs do %>
  <%= form.input :parent_id,
                 :as => :select,
                 :collection => form.object.node.nodes_from_this_site,
                 :selected => form.object.parent_id,
                 :member_label => ->(n) { ('&nbsp;' * 2 * n.depth + n.title).html_safe } %>
  <%= form.input :title, :as => :string, :input_html => { :autofocus => true } %>
  <%= form.input :navigation_title, :as => :string %>
  <%= form.input :alternative_title, :as => :string %>
  <%= form.input :slug %>
  <%= form.input :template, :as => :select, :collection => resource.templates %>
  <%= form.input :in_navigation %>
  <%= form.input :navigation_group %>
  <%= form.input :navigation_position_param, :as => :select, :collection => page_position_collection(resource), :include_blank => false %>
  <%= form.input :page_for_redirect, :collection => form.object.nodes_from_this_site, :member_label => ->(n) { ('&nbsp;' * 2 * n.depth + n.title).html_safe }  %>
  <%= form.input :external_link, :as => :string %>
  <%= render :partial => 'commons/meta_fields', :locals => { :form => form } %>
<% end %>
